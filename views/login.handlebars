

<!-- Logo Div -->
<div class="uk-panel uk-padding uk-background-secondary uk-light">
    <div class="uk-container uk-align-center">
        <img src="https://fontmeme.com/permalink/180323/50aabc6e80ab2d2c3606770837f97459.png" alt="spray-paint-fonts" alt="Hinder Logo" width="400" border="0">
    </div>
</div>

<!-- Login Container -->
<div class="uk-container uk-container-large uk-width-1-3@m uk-margin-large-top">
    <!-- Login Div -->
    <div class="uk-text-center" id="loginForm" uk-grid>
        <!-- Login Form -->
        <form>
            <div class="uk-margin">
                <div class="uk-inline">
                    <span class="uk-form-icon" uk-icon="icon: user"></span>
                    <input class="uk-input" type="text" placeholder="Username" id='login_userName'>
                </div>
            </div>
            <div class="uk-margin">
                <div class="uk-inline">
                    <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: lock"></span>
                    <input class="uk-input" type="text" placeholder="Password" id='login_userPassword'>
                </div>
            </div>
            <div class="uk-margin">
                <div class="uk-inline">
                    <button class="uk-button uk-button-primary" id="loginButton">Login</button>
                </div>
            </div>
            <div class="uk-margin">
                <div class="uk-inline">
                    <button class="uk-button uk-button-primary" id="signupButton">Signup</button>
                </div>
            </div>

        </form>
    </div>
</div>
